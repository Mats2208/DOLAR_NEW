  // Carousel functionality
  function scrollToCard(index: number): void {
    const carousel = document.getElementById('exchanges-carousel');
    if (carousel) {
      const cardWidth = 320; // w-80 = 320px
      const gap = 16; // gap-4 = 16px
      const scrollPosition = index * (cardWidth + gap);
      carousel.scrollTo({
        left: scrollPosition,
        behavior: 'smooth'
      });
      updateActiveDot(index);
    }
  }

  function updateActiveDot(activeIndex: number): void {
    const dots = document.querySelectorAll('.carousel-dot');
    dots.forEach((dot, index) => {
      const dotElement = dot as HTMLElement;
      if (index === activeIndex) {
        dotElement.classList.remove('bg-gray-300');
        dotElement.classList.add('bg-blue-600');
      } else {
        dotElement.classList.remove('bg-blue-600');
        dotElement.classList.add('bg-gray-300');
      }
    });
  }

  // Modal functionality
  document.addEventListener('DOMContentLoaded', () => {
    const compareBtn = document.getElementById('compareBtn');
    const tutorialBtn = document.getElementById('tutorialBtn');
    const modal = document.getElementById('comparisonModal');
    const closeModal = document.getElementById('closeModal');

    compareBtn?.addEventListener('click', () => {
      modal?.classList.remove('hidden');
    });

    closeModal?.addEventListener('click', () => {
      modal?.classList.add('hidden');
    });

    modal?.addEventListener('click', (e) => {
      if (e.target === modal) {
        modal.classList.add('hidden');
      }
    });

    tutorialBtn?.addEventListener('click', () => {
      window.open('https://www.dolarbluebolivia.click/uso_binance', '_blank');
    });    // Card hover effects
    const cards = document.querySelectorAll('[data-exchange]');
    cards.forEach(card => {
      const cardElement = card as HTMLElement;
      cardElement.addEventListener('mouseenter', () => {
        cardElement.style.transform = 'translateY(-8px) scale(1.02)';
      });
      
      cardElement.addEventListener('mouseleave', () => {
        cardElement.style.transform = 'translateY(0) scale(1)';
      });
    });

    // Intersection Observer for animations
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        const target = entry.target as HTMLElement;
        if (entry.isIntersecting) {
          target.style.opacity = '1';
          target.style.transform = 'translateY(0)';
        }
      });
    }, { threshold: 0.1 });

    cards.forEach(card => {
      const cardElement = card as HTMLElement;
      cardElement.style.opacity = '0';
      cardElement.style.transform = 'translateY(20px)';
      cardElement.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
      observer.observe(cardElement);
    });    // Carousel scroll detection for mobile
    const carousel = document.getElementById('exchanges-carousel');
    if (carousel) {
      const totalCards = document.querySelectorAll('#exchanges-carousel > div').length;
      let isScrolling = false;
      carousel.addEventListener('scroll', () => {
        if (!isScrolling) {
          window.requestAnimationFrame(() => {
            const cardWidth = 320; // w-80 = 320px
            const gap = 16; // gap-4 = 16px
            const scrollLeft = carousel.scrollLeft;
            const activeIndex = Math.round(scrollLeft / (cardWidth + gap));
            updateActiveDot(Math.min(activeIndex, totalCards - 1));
            isScrolling = false;
          });
        }
        isScrolling = true;
      });
    }
  });
</script>

